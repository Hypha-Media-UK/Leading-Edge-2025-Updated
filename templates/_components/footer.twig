<footer>
    <div class="container">
        <div class="footer-content">
            <!-- Quick Links Section -->
            <div class="footer-section links">
                <h3>Quick Links</h3>
                <div class="links-grid">
                    <ul>
                        {% for label, url in nav_menu %}
                            <li>
                                <a href="{{ url }}">{{ label }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            
            <!-- Opening Hours Section -->
            <div class="footer-section hours">
                <h3>Opening Hours</h3>
                <div class="hours-grid">
                    {% for day, hours in opening_hours %}
                        <div class="day-row {{ hours == 'Closed' ? 'closed' : '' }}">
                            <span class="day">{{ day }}:</span>
                            <span class="hours">{{ hours }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
            
            <!-- Contact Us Section -->
            <div class="footer-section contact">
                <h3>Contact Us</h3>
                <p><i class="fas fa-map-marker-alt"></i>{{ contact.address }}</p>
                <p><i class="fas fa-phone"></i>{{ contact.phone }}</p>
                <p><i class="fas fa-envelope"></i>{{ contact.email }}</p>
                
                <div class="social-icons">
                    {% for platform, url in social_links %}
                        <a href="{{ url }}" target="_blank" rel="noopener noreferrer">
                            <i class="fab fa-{{ platform }}"></i>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        
        <div class="footer-bottom">
            <p>&copy; {{ "now"|date("Y") }} {{ site_name }}. All rights reserved.</p>
        </div>
    </div>
</footer>
