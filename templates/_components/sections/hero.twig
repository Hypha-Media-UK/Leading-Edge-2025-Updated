    {% set heroImage = entry.cb_homepageHero.heroImage.one() %}
    <section class="hero" {% if heroImage %}style="--hero-bg: url('{{ heroImage.getUrl({ width: 1920, height: 1080, mode: 'crop', format: 'webp', quality: 85 }) }}')"{% endif %}>
        <div class="container">
            <div class="hero-content">
                <div class="text-content">
                    <h1>{{ entry.cb_homepageHero.heroTitle|striptags('<strong>')|raw }}</h1>

                    <p>{{ entry.cb_homepageHero.heroSubText }}</p>
                </div>
                
                <div class="hero-buttons">
                    {% for button in entry.cb_homepageHero.heroButtons %}
                        <a href="{{ button.buttonLink }}" {% if button.highlighted %}class="btn primary"{% else %} class="btn secondary"{% endif %}>{{ button.buttonText }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
