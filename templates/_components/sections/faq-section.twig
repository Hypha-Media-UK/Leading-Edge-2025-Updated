    <section class="faq-section">
        <div class="container">
            <div class="section-header">
                <h2>{{ entry.faqSection.sectionTitle }}</h2>
                {% if entry.faqSection.sectionIntro %}
                    <p>{{ entry.faqSection.sectionIntro }}</p>
                {% endif %}
            </div>
            
            <div class="faq-grid">
                {% for faq in entry.faqSection.faqs %}
                    <div class="faq-item">
                        <h3>{{ faq.faqTitle }}</h3>
                        <p>{{ faq.faqText }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
