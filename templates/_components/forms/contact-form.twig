{# Contact Form Component - Now using Formie #}
<div class="form-header">
    <h2>{{ title|default('Book an Appointment') }}</h2>
    <p>{{ subtitle|default('Fill out the form below and we\'ll get back to you within 24 hours to confirm your booking.') }}</p>
</div>

{{ craft.formie.renderForm('generalContact', {
    themeConfig: {
        form: {
            attributes: {
                class: 'contact-form',
            },
        },
        submitButton: {
            attributes: {
                class: 'btn primary',
            },
        },
    },
}) }}
